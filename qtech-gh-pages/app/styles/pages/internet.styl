}

.connection-mode + .internet_item {
	padding-bottom 10px;
}

.pro-settings {
	padding-top: 6px
}

.hidden-options__connect-type-internet {
	border-bottom: 1px solid #c9b8b9;
	margin-bottom 9px;
	padding-bottom: 15px;
}

.input_hint {
	opacity 0
	visibility hidden
}

.internet_item__pptp,
.internet_item__pppoe,
.internet_item__static-ip,
.internet_item__dns-mode {
	padding-bottom 0;
}

.internet_item__pptp,
.internet_item__pppoe,
.internet_item__static-ip {
	display: none
	&.internet_item {
		.internet_item {
			padding-bottom 10px;
		}
	}
}

.internet_item__connect-type {
	margin-top 30px
}

.internet_item__connect-type__second {
	padding-top: 27px;
	padding-bottom 11px;
}

