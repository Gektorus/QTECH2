.brand
	height: 164px
	border-bottom: 2px rgba(255,255,255,.1) solid;
	position: relative

	&:before {
		position: absolute;
		top: 97px;
		left: 144px;
		display: inline-block;
		width: 101px;
		height: 18px;
		content: '';
		background: url('../images/logo-text.png') no-repeat;
		background-position: 2px 2px;
		background-size: 90px;
	}

	&_logo {
		display block
		width: 100%;
		height: 100%;
		text-align: center
		padding-top: 36px;
		&:after {
			position: relative
			top: 17px
			right: 3px
			content: ''
			display inline-block
			background: url('../images/qtech-text.png') no-repeat;
			margin-left 6px
			background-size: 96px;
			width: 127px;
			height: 56px;
		}
		&:before {
			content: ''
			display inline-block
			background: url('../images/sprite.png') no-repeat;
			background-position: 2px 2px;
			background-size: 244px;
			width: 71px;
			height: 71px;
			position: relative;
			top: 8px;
			left: -3px;
		}
	}


.main-menu__item
	position: relative;
	height: 93px;
	line-height: 90px;
	border-bottom: 2px rgba(255,255,255,.1) solid;
	letter-spacing: -.7px;
	transition: background-color .3s;

