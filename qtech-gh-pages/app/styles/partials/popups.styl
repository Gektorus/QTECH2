.popup_overlay {
	z-index: 10;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.6);
	display: none;

	&:hover {
		cursor: default;
	}
}

.popup_item {
	height: 277px;
	width: 621px;
	padding: 40px;
	text-align: center;
	background-color: rgba(255,255,255,.8);
	position: fixed;
	top: 0;
	bottom: 0
	left: 0
	right: 0
	margin: auto
	display: none
	z-index: 11
}

.popup_title {
	font-size: 30px;
	padding: 25px 0 15px;
	text-transform: uppercase;
	color: #8b6e74;
	line-height: 38px;
}

.popup_text {
	width 340px;
	margin: auto;
	font-size: 16px;
	font-family: 'Roboto';
	font-weight: 300;
	color: #8b6e74;
	line-height 20px
}

.popup_button-set {
	text-align center;
	margin-top: 30px;
}

.popup_close {
	position absolute;
	width: 29px;
	height: 29px;
	border: none;
	right: 15px;
	top: 15px;
	fill: #b5596a;
	transition: transform .4s;
	background-color transparent;

	&:hover {
		transform: rotate(90deg)
	}
}

.popup_button {
	display: inline-block;
	font-size: 18px;
	width: 170px;
	height: 50px;
	line-height 48px;
	border-color: #b5596a;
	color: #b5596a;
	border-width: 1px;
	padding: 0
	font-weight 400
}

.popup_progress {
	margin-top: 15px;
	/*overflow: auto*/
	padding 3px 0;
	overflow: hidden

	&-value {
		width: 60px
		font-size: 30px
		font-family 'Roboto'
		font-weight 300
		color: #b5596a;
		float: left;
		margin-right: 26px;
		padding-left: 8px;

		&:after {
			content: '%'
		}
	}

	&-meter {
		width 475px;
		height: 30px;
		border: 1px solid rgba(139,110,116,.5);
		position relative
		float left
	}

	&-current {
		position absolute
		height: 100%;
		width: 30%;
		left: 0; top: 0;
		background: url('../images/fill-big.png');
		background-size: 30px;
		animation: progressAnimateBig 3s linear infinite;
		animation-fill-mode: forwards;
	}
}

// personal settings
.popup__save {

	.popup_title {
		margin: auto;
		padding-top: 35px;
	}

	.popup_button-set {
		margin-top 8px;
	}
}

.popup__reboot {
	width: 690px;
	height: 270px;
}


.popup_item__progress {
	height: 270px;
	width: 690px
	padding: 60px 40px 57px;

	.popup_title {
		line-height 34px;
		padding-bottom: 11px;
	}

}

.blur-filter {
    -webkit-filter: blur(2px);
    -moz-filter: blur(2px);
    -o-filter: blur(2px);
    -ms-filter: blur(2px);
    filter: blur(2px);
}

.popup__definition {
	height: 487px;

	.popup_button-set {
		margin-top: 63px;
	}

	.popup_text {
		width: 490px;
	}
}
