
.internet {
	clear: both
}

.section_name__internet {
	letter-spacing -1px
	&:after {
		left: 0;
		margin-top: -13px;
		width: 32px;
		height: 30px;
		background: url('../images/internet-section-logo.png') no-repeat;
		background-size: 30px;
	}
}

.section-header {
	&:after {
		visibility: hidden;
		display: block;
		content: "";
		clear: both;
		height: 0;
	}
}

.section-header_buttons
	float: right
	margin-top: -3px;

	.button__action
		width: 106px
		height: 43px
		transform: translateX(-5px)
		&:hover {
			background-color: rgba(174, 45, 68, .1)
		}
	.button__cherry
		width: 170px;
		height: 43px

.section_name__internet {
	float left
}

.internet_section {
	/*background-color: rgba(255,255,255,.72);*/
	/*padding-top: 46px;*/

	.jelect-current {
		box-shadow: 0 0 1px #91767b;
	}
}

.internet_section__wrapper {
	/*background-color: rgba(255, 255, 255, .72);*/
	padding: 1px 60px 44px 60px;
	background-color: #fff;
	opacity: .73;
}

.internet_section .internet_section__wrapper:nth-of-type(1) {
	padding-top: 46px;
}

.internet_item {
	padding-bottom: 27px;
	clear: both;

	&__connect-type {
		margin-top: 35px;
	}

	&:after {
		visibility: hidden;
		display: block;
		content: "";
		clear: both;
		height: 0;
	}
}

.internet_item .checkbox-small_label {
	width: 65px;
	height: 24px;
	transform: translateY(7px);
	.checkbox-small_value:after {
		font-size: 12px;
	}
	.checkbox-small_slider:after {
		width: 16px;
		height: 15px;
		border-radius 3px
		margin-top: -8px
	}
}

.internet_item .checkbox-small:checked ~ .checkbox-small_label .checkbox-small_slider:after {
	left: 38px;
}

.internet_item .checkbox-small:checked ~ .checkbox-small_label .checkbox-small_value:after {
	content: 'on';
	left: -8px;
}

.internet_item-name {
	color: #8b6e74;
	width: 250px;
	font-size: 17px
	float: left;
	font-weight 500;
	line-height 37px
}

.internet_item .jelect {
	width: 210px;
	height: 37px;

	.jelect-current {
		font-size: 16px;
		line-height 37px;
		padding: 0 36px 0 14px;
		&:after {
			width: 36px;
			bottom: 0;
			background-size: 11px 8px;
		}
	}

	.jelect-option {
		height: 37px;
		line-height 37px
		font-size: 16px;
		padding-left: 14px
		font-weight: 300;
	}

	.jelect-options {
		border-top: 0;
		margin-top 0
		width: 100%;
		left: 0%;
	}
}

.jelect_state_active {
	.jelect-options {
		display block;
	}
	.jelect-current {
		overflow: visible
	}
}

.extend-item {
	height: 0;
	overflow: hidden;
	margin-top: 31px;
	line-height 37px
	transition: height .4s, overflow .4s;

	.internet_item-name {
		font-family: 'Roboto';
		font-weight 300;
	}
}

.extend-item.extend-item__dns {
	overflow visible
	display: none
	height: auto
	margin-top: 21px
	transition none

	.internet_item:nth-child(2) {
		padding-bottom: 1px;
	}
}

.internet_item-value {
	display inline-block
	width: 433px;
}

.internet_item__primary-dns {
	padding-bottom 10px;
}

// separators
.internet_item__dns-mode,
.internet_item__vlan, .internet_item__eap,
.internet_item__path {
	border-bottom: 1px solid #c9b8b9
	margin-bottom: 25px;
}

.internet_item__dns-mode {
	padding-bottom: 27px !important
	margin-top 25px;
}

.internet_item__connect-type__second,
.internet_item__eap, .internet_item__path {
	padding-top: 25px;
	border-top: 1px solid #c9b8b9
}

.internet_item__eap {
	padding-bottom 0;
}

.extend-item_holder {
	padding-top: 6px
	clear: both
	&:first-child {
		padding-top 0
	}
}

.connection-mode {
	em {
		font-style: italic;
		font-weight: 300;
	}
}

.sub-item {
	font-family 'Roboto'
	font-weight 300
}

.internet_item__cabinet .extend-item {
	transition 0
	opacity 1
	height auto
	overflow visible
	width: 100%
}

.internet_item__vlan {
	.extend-item {
		height: auto
		transition none
	}

	&:after {
		display none;
	}
}

