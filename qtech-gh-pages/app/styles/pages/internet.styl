	padding-top: 18px;

	& > .internet_item-name {
		margin-bottom: 18px;
	}
}

.hidden_item {
	padding-bottom 10px;
	&:after {
		content: " "; /* Older browser do not support empty content */
		visibility: hidden;
		display: block;
		height: 0;
		clear: both;
	}
}

.pppoe-selected, .static-ip-selected, .hidden_item__ip-version-hybrid, .internet_item__ip-version6 {
